<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back3">

    <TextView
        android:id="@+id/highScoreTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/ic_trophy"
        android:drawableRight="@drawable/ic_trophy"
        android:gravity="center"
        android:text="HIGH  SCORES"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@android:color/white"
        android:textSize="33dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/highScoreTitle"
        app:layout_constraintBottom_toTopOf="@id/tableScoresEasy"
        android:layout_marginTop="3dp"
        android:id="@+id/easyRow"
        tools:layout_editor_absoluteX="0dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center">

            <TextView
                android:id="@+id/EasyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Easy Level"
                android:textColor="@android:color/white"
                android:textSize="22dp" />
        </TableRow>
    </TableLayout>


    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableScoresEasy"
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:layoutDirection="ltr"
        android:stretchColumns="1"
        app:layout_constraintTop_toBottomOf="@+id/easyRow"
        tools:layout_editor_absoluteX="0dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/table_row_bg_green">
            <TextView
                android:id="@+id/placeTextRowEasy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="Rate"
                android:textColor="@android:color/black"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/userNameTextRowEasy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="User Name"
                android:textColor="@android:color/black"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/ScoreTextRowEasy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="Score"
                android:textColor="@android:color/black"
                android:textSize="26dp" />
        </TableRow>


        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/back3"
            android:layoutDirection="ltr">

            <TableLayout
                android:id="@+id/tableScoresEasy1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="ltr"
                android:stretchColumns="1">

                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/table_row_bg_green">

                    <TextView
                        android:id="@+id/placeTextRowEasy1"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:background="@drawable/table_cell_bg"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Rate"
                        android:textSize="26dp" />

                    <TextView
                        android:id="@+id/userNameTextRowEasy1"
                        android:layout_width="180dp"
                        android:layout_height="0dp"
                        android:background="@drawable/table_cell_bg"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="User Name"
                        android:textSize="26dp" />

                    <TextView
                        android:id="@+id/ScoreTextRowEasy1"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:background="@drawable/table_cell_bg"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Score"
                        android:textSize="26dp" />
                </TableRow>
            </TableLayout>
        </ScrollView>
    </TableLayout>







    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tableScoresEasy"
        android:layout_marginTop="3dp"
        android:id="@+id/mediumRow"
        tools:layout_editor_absoluteX="0dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center">

            <TextView
                android:id="@+id/MediumTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:text="Medium Level"
                android:textColor="@android:color/white"
                android:textSize="22dp" />
        </TableRow>
    </TableLayout>


    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableScoresMedium"
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:layoutDirection="ltr"
        android:stretchColumns="1"
        app:layout_constraintTop_toBottomOf="@+id/mediumRow"
        tools:layout_editor_absoluteX="0dp">


        <TableRow

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/table_row_bg_yellow">

            <TextView
                android:id="@+id/placeTextRowMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="Rate"
                android:textColor="@android:color/black"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/userNameTextRowMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="User Name"
                android:textColor="@android:color/black"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/ScoreTextRowMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="Score"
                android:textColor="@android:color/black"
                android:textSize="26dp" />
        </TableRow>


        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/back3"
            android:layoutDirection="ltr">

            <TableLayout
                android:id="@+id/tableScoresMedium1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="ltr"
                android:stretchColumns="1">

                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/table_row_bg_yellow">

                    <TextView
                        android:id="@+id/placeTextRowMedium1"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:background="@drawable/table_cell_bg"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Rate"
                        android:textSize="26dp" />

                    <TextView
                        android:id="@+id/userNameTextRowMedium1"
                        android:layout_width="180dp"
                        android:layout_height="0dp"
                        android:background="@drawable/table_cell_bg"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="User Name"
                        android:textSize="26dp" />

                    <TextView
                        android:id="@+id/ScoreTextRowMedium1"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:background="@drawable/table_cell_bg"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Score"
                        android:textSize="26dp" />
                </TableRow>
            </TableLayout>
        </ScrollView>
    </TableLayout>








    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tableScoresMedium"
        android:layout_marginTop="3dp"
        android:id="@+id/hardRow"
        tools:layout_editor_absoluteX="0dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center">

            <TextView
                android:id="@+id/HardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"

                android:text="Hard Level"
                android:textColor="@android:color/white"
                android:textSize="22dp" />
        </TableRow>
    </TableLayout>


    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableScoresHard"
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:layoutDirection="ltr"
        android:stretchColumns="1"
        app:layout_constraintTop_toBottomOf="@+id/hardRow"
        tools:layout_editor_absoluteX="0dp">


        <TableRow

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/table_row_bg_red">

            <TextView
                android:id="@+id/placeTextRowHard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="Rate"
                android:textColor="@android:color/black"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/userNameTextRowHard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="User Name"
                android:textColor="@android:color/black"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/ScoreTextRowHard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="Score"
                android:textColor="@android:color/black"
                android:textSize="26dp" />
        </TableRow>


        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/back3"
            android:layoutDirection="ltr">

            <TableLayout
                android:id="@+id/tableScoresHard1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="ltr"
                android:stretchColumns="1">

                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/table_row_bg_red">

                    <TextView
                        android:id="@+id/placeTextRowHard1"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:background="@drawable/table_cell_bg"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Rate"

                        android:textSize="26dp" />

                    <TextView
                        android:id="@+id/userNameTextRowHard1"
                        android:layout_width="180dp"
                        android:layout_height="0dp"
                        android:background="@drawable/table_cell_bg"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="User Name"

                        android:textSize="26dp" />

                    <TextView
                        android:id="@+id/ScoreTextRowHard1"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:background="@drawable/table_cell_bg"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Score"
                        android:textSize="26dp" />
                </TableRow>
            </TableLayout>
        </ScrollView>
    </TableLayout>

    </android.support.constraint.ConstraintLayout>